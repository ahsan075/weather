<html lang="en">
  <head>
   {{>headerLinks}}
  </head>
  <body>

    {{>navbar}}

    <!-- Main Header -->

    <div class="container-fluid main_header">
      <div class="row">
        <div class="col-md-10 col-12 mx-auto">
          
            <div class="main_content">
                <form class="temp_form" action="">
                    
                    <input type="text" name="" id="cityName" placeholder="Enter Your City Name" autocomplete="off">
                    <input type="text" name="" id="countryName" placeholder="Bangladesh" autocomplete="off">
                    <input type="submit" value="Search" id="submitBtn">
                 
                </form>
            </div>

            <div class="tempInformation">
                <div class="top_layer">
                    <p id="day">Tuesday</p>
                   
                    <p id="today_date">13 OCT</p>
                </div>
                <div class="main_layer">
                    <p id="city_name">Get Output Here</p>
                    <p id="time">Time</p>
                <div class="middle_layer">   
                    <p id="temp"><span>0</span><sup>o</sup>C</p>
                    <p id="temp_status"><i class="fas fa-cloud" aria-hidden="true"></i></p>
                </div>
                <p id="sunset">Max temp , Min temp</p>
                </div>
            </div>

        </div>
      </div>
    </div>

    <!-- Footer -->
{{>footer}}

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
    ></script>
    <script src="js/weather.js"></script>
    <script src="js/main.js"></script>
  </body>
</html>